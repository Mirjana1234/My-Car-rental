<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My_Car_rental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/My_Car_rental.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        @using Microsoft.AspNetCore.Identity
        @using My_Car_rental.Areas.Identity.Data
        @inject SignInManager<My_Car_rentalUser> SignInManager
        @inject UserManager<My_Car_rentalUser> UserManager
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo on the left -->
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <img src="/images/logo.png" alt="Logo" style="height:80px; width:auto;">
                </a>

                <!-- Centered navigation -->
                <div class="mx-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" style="font-size:1.15rem; letter-spacing:0.5px;" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark fw-bold" style="font-size:1.15rem; letter-spacing:0.5px;" asp-controller="Home" asp-action="Cars">Cars</a>
                        </li>
                    </ul>
                </div>

                <!-- Login/Register on the right -->
                <div class="d-flex">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <span class="navbar-text me-2">Hello, @UserManager.GetUserName(User)!</span>
                        <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-secondary rounded-pill ms-2" style="background-color:#f1f1f1; color:#333; border:none;">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a class="btn rounded-pill me-2" style="background-color:#f1f1f1; color:#333; border:none;" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        <a class="btn rounded-pill" style="background-color:#f1f1f1; color:#333; border:none;" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <footer class="bg-dark text-white mt-5">
        <div class="container py-4">
            <div class="row">
                <!-- About Us -->
                <div class="col-md-4 mb-3">
                    <h5>About Us</h5>
                    <p>We are passionate about helping you find the perfect car — quickly, safely, and affordably.</p>
                    <a href="/About" class="text-white">Read more →</a>
                </div>

                <!-- Contact -->
                <div class="col-md-4 mb-3">
                    <h5>Contact</h5>
                    <p>Email: <a href="mailto:support@mycarrental.com" class="text-white">support@mycarrental.com</a></p>
                    <p>Phone: +46 123 456 789</p>
                    <p>Hours: Mon–Fri 08:00–18:00</p>
                </div>

                <!-- Social Media -->
                <div class="col-md-4 mb-3">
                    <h5>Follow Us</h5>
                    <a href="#" class="text-white d-block mb-1">Facebook</a>
                    <a href="#" class="text-white d-block mb-1">Instagram</a>
                    <a href="#" class="text-white d-block">LinkedIn</a>
                </div>
            </div>

            <hr class="bg-white" />
            <div class="text-center">
                <small>© @DateTime.Now.Year My Car Rental. All rights reserved.</small>
            </div>
        </div>
    </footer>
</body>
</html>